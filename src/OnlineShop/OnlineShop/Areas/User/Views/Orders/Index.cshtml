@using OnlineShop.Utils
@model IEnumerable<OnlineShop.Models.Db.Order>

@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<div class="user-orders-page">
    <div class="container-fluid py-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: calc(100vh - 80px); margin-top: 80px;">
        <div class="container">
            <!-- Header Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="text-center text-white">
                        <h1 class="display-5 fw-bold mb-3">
                            <i class="fas fa-shopping-bag me-3"></i>
                            Đơn hàng của tôi
                        </h1>
                        <p class="lead mb-0">
                            Theo dõi và quản lý tất cả đơn hàng của bạn tại một nơi
                        </p>
                    </div>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="row mb-5">
                <div class="col-md-3 col-6 mb-3">
                    <div class="card text-center border-0 shadow-sm bg-light">
                        <div class="card-body py-4">
                            <div class="text-primary mb-2">
                                <i class="fas fa-shopping-cart fa-2x"></i>
                            </div>
                            <h3 class="fw-bold text-primary">@Model.Count()</h3>
                            <p class="text-muted mb-0">Tổng đơn hàng</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-3">
                    <div class="card text-center border-0 shadow-sm bg-light">
                        <div class="card-body py-4">
                            <div class="text-success mb-2">
                                <i class="fas fa-check-circle fa-2x"></i>
                            </div>
                            <h3 class="fw-bold text-success">@Model.Count(x => x.Status == "Completed")</h3>
                            <p class="text-muted mb-0">Hoàn thành</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-3">
                    <div class="card text-center border-0 shadow-sm bg-light">
                        <div class="card-body py-4">
                            <div class="text-warning mb-2">
                                <i class="fas fa-truck fa-2x"></i>
                            </div>
                            <h3 class="fw-bold text-warning">@Model.Count(x => x.Status == "Shipping")</h3>
                            <p class="text-muted mb-0">Đang giao</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-3">
                    <div class="card text-center border-0 shadow-sm bg-light">
                        <div class="card-body py-4">
                            <h3 class="fw-bold text-info">@CurrencyConverter.FormatToVND(Model.Sum(x => x.Total ?? 0))</h3>
                            <p class="text-muted mb-0">Tổng chi tiêu</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Filter Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="row g-3 align-items-center">
                                <div class="col-md-4">
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="fas fa-search text-muted"></i>
                                        </span>
                                        <input type="text" class="form-control border-start-0" placeholder="Tìm kiếm đơn hàng..." id="searchInput">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <select class="form-select" id="statusFilter">
                                        <option value="">Tất cả trạng thái</option>
                                        <option value="Pending">Chờ xử lý</option>
                                        <option value="Confirmed">Đã xác nhận</option>
                                        <option value="Shipping">Đang giao hàng</option>
                                        <option value="Completed">Hoàn thành</option>
                                        <option value="Cancelled">Đã hủy</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <select class="form-select" id="timeFilter">
                                        <option value="">Tất cả thời gian</option>
                                        <option value="7">7 ngày qua</option>
                                        <option value="30">30 ngày qua</option>
                                        <option value="90">3 tháng qua</option>
                                        <option value="365">1 năm qua</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <button class="btn btn-primary w-100" onclick="clearFilters()">
                                        <i class="fas fa-refresh me-1"></i>
                                        Làm mới
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Orders List -->
            <div class="row">
                <div class="col-12">
                    @if (Model.Any())
                    {
                        <div class="orders-container">
                            @foreach (var item in Model.OrderByDescending(x => x.CreateDate))
                            {
                                <div class="card order-card mb-4 border-0 shadow-sm" data-order-id="@item.Id">
                                    <div class="card-body p-4">
                                        <!-- Order Header -->
                                        <div class="row align-items-center mb-3">
                                            <div class="col-md-8">
                                                <div class="d-flex align-items-center">
                                                    <div class="order-icon me-3">
                                                        <i class="fas fa-receipt"></i>
                                                    </div>
                                                    <div>
                                                        <h5 class="mb-1 fw-bold">Đơn hàng #@item.TransId</h5>
                                                        <p class="text-muted mb-0">
                                                            <i class="fas fa-calendar-alt me-1"></i>
                                                            Đặt ngày @item.CreateDate?.ToString("dd/MM/yyyy") lúc @item.CreateDate?.ToString("HH:mm")
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-4 text-md-end">
                                                @{
                                                    string statusClass = item.Status switch {
                                                        "Completed" => "success",
                                                        "Pending" => "warning",
                                                        "Confirmed" => "info",
                                                        "Shipping" => "primary",
                                                        "Cancelled" => "danger",
                                                        _ => "secondary"
                                                    };

                                                    string statusText = item.Status switch {
                                                        "Completed" => "Hoàn thành",
                                                        "Pending" => "Chờ xử lý",
                                                        "Confirmed" => "Đã xác nhận",
                                                        "Shipping" => "Đang giao hàng",
                                                        "Cancelled" => "Đã hủy",
                                                        _ => item.Status
                                                    };

                                                    string statusIcon = item.Status switch {
                                                        "Completed" => "check-circle",
                                                        "Pending" => "clock",
                                                        "Confirmed" => "thumbs-up",
                                                        "Shipping" => "truck",
                                                        "Cancelled" => "times-circle",
                                                        _ => "info-circle"
                                                    };
                                                }
                                                <span class="badge bg-@statusClass fs-6 px-3 py-2">
                                                    <i class="fas fa-@statusIcon me-1"></i>
                                                    @statusText
                                                </span>
                                            </div>
                                        </div>

                                        <!-- Order Details -->
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="order-info">
                                                    <div class="row g-2">
                                                        <div class="col-6">
                                                            <small class="text-muted d-block">Người nhận</small>
                                                            <span class="fw-bold">@item.FirstName @item.LastName</span>
                                                        </div>
                                                        <div class="col-6">
                                                            <small class="text-muted d-block">Số điện thoại</small>
                                                            <span class="fw-bold">@item.Phone</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="order-info">
                                                    <small class="text-muted d-block">Địa chỉ giao hàng</small>
                                                    <span class="fw-bold">
                                                        <i class="fas fa-map-marker-alt text-danger me-1"></i>
                                                        @item.Address, @item.City
                                                    </span>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Order Summary -->
                                        <div class="row align-items-center">
                                            <div class="col-md-6">
                                                <div class="order-total">
                                                    <span class="text-muted">Tổng tiền: </span>
                                                    <span class="h4 text-success fw-bold">@CurrencyConverter.FormatToVND(item.Total ?? 0)</span>
                                                    @if (item.CouponDiscount > 0)
                                                    {
                                                        <div class="mt-1">
                                                            <small class="text-success">
                                                                <i class="fas fa-tag me-1"></i>
                                                                Đã giảm @CurrencyConverter.FormatToVND(item.CouponDiscount ?? 0) với mã @item.CouponCode
                                                            </small>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                            <div class="col-md-6 text-md-end">
                                                <div class="order-actions">
                                                    <a asp-action="Details" asp-route-id="@item.Id"
                                                       class="btn btn-outline-primary me-2">
                                                        <i class="fas fa-eye me-1"></i>
                                                        Xem chi tiết
                                                    </a>
                                                    @if (item.Status == "Completed")
                                                    {
                                                        <button class="btn btn-success me-2" onclick="reorder(@item.Id)">
                                                            <i class="fas fa-redo me-1"></i>
                                                            Mua lại
                                                        </button>
                                                        <button class="btn btn-outline-info" onclick="downloadInvoice(@item.Id)">
                                                            <i class="fas fa-download me-1"></i>
                                                            Hóa đơn
                                                        </button>
                                                    }
                                                    else if (item.Status == "Pending")
                                                    {
                                                        <button class="btn btn-outline-danger" onclick="cancelOrder(@item.Id)">
                                                            <i class="fas fa-times me-1"></i>
                                                            Hủy đơn
                                                        </button>
                                                    }
                                                    else if (item.Status == "Shipping")
                                                    {
                                                        <button class="btn btn-info" onclick="trackOrder('@item.TransId')">
                                                            <i class="fas fa-map-marker-alt me-1"></i>
                                                            Theo dõi
                                                        </button>
                                                    }
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Progress Bar for Active Orders -->
                                        @if (item.Status != "Completed" && item.Status != "Cancelled")
                                        {
                                            <div class="mt-3">
                                                <div class="order-progress">
                                                    <div class="progress-steps">
                                                        <div class="step @(new[] {"Pending", "Confirmed", "Shipping", "Completed"}.Contains(item.Status) ? "active" : "")">
                                                            <div class="step-icon">
                                                                <i class="fas fa-clock"></i>
                                                            </div>
                                                            <span>Chờ xử lý</span>
                                                        </div>
                                                        <div class="step @(new[] {"Confirmed", "Shipping", "Completed"}.Contains(item.Status) ? "active" : "")">
                                                            <div class="step-icon">
                                                                <i class="fas fa-check"></i>
                                                            </div>
                                                            <span>Đã xác nhận</span>
                                                        </div>
                                                        <div class="step @(new[] {"Shipping", "Completed"}.Contains(item.Status) ? "active" : "")">
                                                            <div class="step-icon">
                                                                <i class="fas fa-truck"></i>
                                                            </div>
                                                            <span>Đang giao</span>
                                                        </div>
                                                        <div class="step @(item.Status == "Completed" ? "active" : "")">
                                                            <div class="step-icon">
                                                                <i class="fas fa-star"></i>
                                                            </div>
                                                            <span>Hoàn thành</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Load More Button -->
                        @if (Model.Count() > 5)
                        {
                            <div class="text-center mt-4">
                                <button class="btn btn-outline-light btn-lg" id="loadMoreBtn" onclick="loadMore()">
                                    <i class="fas fa-plus me-2"></i>
                                    Xem thêm đơn hàng
                                </button>
                            </div>
                        }
                    }
                    else
                    {
                        <!-- Empty State -->
                        <div class="card border-0 shadow-sm">
                            <div class="card-body text-center py-5">
                                <div class="empty-state">
                                    <i class="fas fa-shopping-bag fa-4x text-muted mb-4"></i>
                                    <h3 class="text-muted mb-3">Chưa có đơn hàng nào</h3>
                                    <p class="text-muted mb-4">Bạn chưa có đơn hàng nào. Hãy khám phá các sản phẩm tuyệt vời của chúng tôi!</p>
                                    <a href="/products" class="btn btn-primary btn-lg">
                                        <i class="fas fa-shopping-cart me-2"></i>
                                        Mua sắm ngay
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .user-orders-page .card {
        border-radius: 15px;
        transition: all 0.3s ease;
    }

    .user-orders-page .order-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 1rem 3rem rgba(0,0,0,.175)!important;
    }

    .user-orders-page .order-icon {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
    }

    .user-orders-page .order-info {
        padding: 0.5rem 0;
    }

    .user-orders-page .order-progress {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 1rem;
    }

    .user-orders-page .progress-steps {
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: relative;
    }

    .user-orders-page .progress-steps::before {
        content: '';
        position: absolute;
        top: 25px;
        left: 50px;
        right: 50px;
        height: 2px;
        background: #dee2e6;
        z-index: 1;
    }

    .user-orders-page .step {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        z-index: 2;
    }

    .user-orders-page .step-icon {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: #dee2e6;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 0.5rem;
        transition: all 0.3s ease;
    }

    .user-orders-page .step.active .step-icon {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
    }

    .user-orders-page .step span {
        font-size: 0.8rem;
        font-weight: 600;
        color: #6c757d;
    }

    .user-orders-page .step.active span {
        color: #28a745;
    }

    .user-orders-page .badge {
        font-size: 0.85rem;
        font-weight: 600;
    }

    .user-orders-page .empty-state i {
        animation: bounce 2s infinite;
    }


    .user-orders-page .order-actions {
        margin-top: 1rem;
    }

    .user-orders-page .order-actions .btn {
        display: block;
        width: 100%;
        margin-bottom: 0.5rem;
        margin-right: 0 !important;
    }

    .user-orders-page .progress-steps {
        flex-wrap: wrap;
    }

    .user-orders-page .step {
        flex: 1;
        min-width: 80px;
    }

    .user-orders-page .step span {
        font-size: 0.7rem;
    }
</style>

<script>
    function applyFilters() {
        const searchTerm = document.getElementById('searchInput').value.toLowerCase();
        const statusFilter = document.getElementById('statusFilter').value;
        const timeFilter = document.getElementById('timeFilter').value;

        const orderCards = document.querySelectorAll('.order-card');

        orderCards.forEach(card => {
            let show = true;

            // Search filter
            if (searchTerm) {
                const orderText = card.textContent.toLowerCase();
                if (!orderText.includes(searchTerm)) {
                    show = false;
                }
            }

            // Status filter
            if (statusFilter && show) {
                const statusBadge = card.querySelector('.badge');
                if (!statusBadge.textContent.includes(statusFilter)) {
                    show = false;
                }
            }

            card.style.display = show ? 'block' : 'none';
        });
    }

    function clearFilters() {
        document.getElementById('searchInput').value = '';
        document.getElementById('statusFilter').value = '';
        document.getElementById('timeFilter').value = '';
        applyFilters();
    }

    function reorder(orderId) {
        if (confirm('Bạn có muốn mua lại các sản phẩm trong đơn hàng này không?')) {
            // Implement reorder functionality
            alert('Chức năng mua lại đang được phát triển');
        }
    }

    function cancelOrder(orderId) {
        if (confirm('Bạn có chắc chắn muốn hủy đơn hàng này không?')) {
            // Implement cancel order functionality
            alert('Đơn hàng đã được hủy');
        }
    }

    function trackOrder(transId) {
        // Implement order tracking
        alert('Theo dõi đơn hàng #' + transId);
    }

    function downloadInvoice(orderId) {
        // Implement invoice download
        alert('Đang tải hóa đơn...');
    }

    function loadMore() {
        // Implement load more functionality
        alert('Chức năng xem thêm đang được phát triển');
    }

    // Real-time search
    document.getElementById('searchInput').addEventListener('input', applyFilters);
    document.getElementById('statusFilter').addEventListener('change', applyFilters);
    document.getElementById('timeFilter').addEventListener('change', applyFilters);
</script>

