@using OnlineShop.Utils
@model OnlineShop.Models.Db.Product
@{
    List<ProductGalery>? gallery = new List<ProductGalery>();
    List<Product> newProducts = new List<Product>();
    List<Comment> comments = new List<Comment>();
    // ViewData["NewProducts"]
    if (ViewData["NewProducts"] != null)
    {
        newProducts = ViewData["NewProducts"] as List<Product>;
    }

    if (ViewData["gallery"] != null)
    {
        gallery = ViewData["gallery"] as List<ProductGalery>;
    }

    if (ViewData["comments"] != null)
    {
        comments = ViewData["comments"] as List<Comment>;
    }

}
<style>
    .rating-stars {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
    }

    .rating-stars li {
        margin-right: 5px;
    }

    .rating-stars a {
        text-decoration: none;
        color: #ccc;
        font-size: 30px;
    }

    .rating-stars a.selected {
        color: gold;
    }

    .rating-stars a:hover {
        color: gold;
    }

</style>
<!--breadcrumbs area start-->
<div class="breadcrumbs_area breadcrumbs_product mt-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="/">home</a></li>
                        <li><a href="/products">shop</a></li>
                        <li>@Model.Title</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->

<!--product details start-->
<section class="product_details mb-135">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="product_zoom_gallery">
                    <div class="zoom_gallery_inner d-flex">
                        <div class="zoom_tab_img">
                            <a class="zoom_tabimg_list" href="javascript:void(0)">
                                <img src="/images/banners/@Model.ImageName" alt="@Model.ImageName">
                            </a>
                            @if (gallery.Any())
                            {
                                @foreach (var item in gallery.OrderBy(x => x.Id))
                                {
                                    <a class="zoom_tabimg_list" href="javascript:void(0)">
                                        <img src="/images/banners/@item.ImageName" alt="@item.ImageName">
                                    </a>
                                }
                            }
                        </div>
                        <div class="product_zoom_main_img">
                            <div class="product_zoom_thumb">
                                <img data-image="/images/banners/@Model.ImageName"
                                     src="/images/banners/@Model.ImageName" alt="@Model.ImageName">
                            </div>
                            @if (gallery.Any())
                            {
                                @foreach (var item in gallery.OrderBy(x => x.Id))
                                {
                                    <div class="product_zoom_thumb">
                                        <img data-image="/images/banners/@item.ImageName"
                                             src="/images/banners/@item.ImageName" alt="@item.ImageName">
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="product_d_right">
                    <form action="#">
                        <h1>@Model.Title</h1>
                        <div class="product_ratting_review d-flex align-items-center">

                            <div class="product_review">
                                <ul class="d-flex">
                                    <li>@comments.Count reviews</li>
                                    <li>Write your review</li>
                                </ul>
                            </div>
                        </div>
                        <div class="price_box">
                                <span class="current_price">
                                     @if (@Model.Discount != null)
                                    {
                                        <span class="current_price">
                                                @{
                                                decimal? discountedPrice;
                                                discountedPrice = @Model.Price.GetValueOrDefault(0) - @Model.Discount.GetValueOrDefault(0);
                                            }
                                            @CurrencyConverter.FormatToVND(discountedPrice.GetValueOrDefault(0))
                                            </span>
                                        <span class="old_price">@CurrencyConverter.FormatToVND(Model.Price.GetValueOrDefault(0))</span>
                                    }
                                    else
                                    {
                                        <span
                                            class="current-price">@CurrencyConverter.FormatToVND(Model.Price.GetValueOrDefault(0))</span>
                                    }
                                </span>
                        </div>
                        <div class="product_availalbe">
                            <ul class="d-flex">
                                <li><i class="icon-layers icons"></i> Only <span>
                                        @Model.Qty
                                    </span> left
                                </li>
                                <li>Availalbe:
                                    @if (Model.Qty > 0)
                                    {
                                        <span class="stock">In Stock</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger">Out of Stock</span>
                                    }
                                </li>
                            </ul>
                        </div>
                        <div class="product_desc">
                            <p>@Model.Description </p>
                        </div>
                        <div class="product_variant">

                            <div class="variant_quantity_btn d-flex">
                                @if (Model.Qty > 0)
                                {
                                    <div class="pro-qty border">
                                        <input min="1" max="100" type="text" value="1">
                                    </div>
                                    <button class="button btn btn-primary" type="submit"><i class="ion-android-add"></i>
                                        Add
                                        To Cart
                                    </button>
                                }
                            </div>
                        </div>
                        <div class="product_sku">
                            <p><span>SKU: </span> PRI#@Model.Id</p>
                        </div>
                        <div class="product_tags d-flex">
                            @if (!string.IsNullOrEmpty(Model.Tags))
                            {
                                var tags = Model.Tags.Split(",");
                                <span>tags: </span>
                                <ul class="d-flex">
                                    @foreach (var item in tags)
                                    {
                                        <li><a href="/products/SearchProduct?searchText=@item">@item</a></li>
                                    }
                                </ul>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!--product details end-->

<!--product info start-->
<div class="product_d_info mb-118">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="product_d_inner">
                    <div class="product_info_button border-bottom">
                        <ul class="nav" role="tablist">
                            <li>
                                <a class="active" data-toggle="tab" href="#info" role="tab" aria-controls="info"
                                   aria-selected="false">Product Description</a>
                            </li>
                            <li>
                                <a data-toggle="tab" href="#reviews" role="tab" aria-controls="reviews"
                                   aria-selected="false">Reviews </a>
                            </li>
                            <li>
                                <a data-toggle="tab" href="#tags" role="tab" aria-controls="tags" aria-selected="false">Tags </a>
                            </li>
                            <li>
                                <a data-toggle="tab" href="#video" role="tab" aria-controls="video"
                                   aria-selected="false">Custom Tab Video </a>
                            </li>

                        </ul>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="info" role="tabpanel">
                            <div class="product_info_content">
                                @Html.Raw(Model.FullDesc.Replace("\n", "<br/>"))
                            </div>
                        </div>
                        <div class="tab-pane fade" id="reviews" role="tabpanel">
                            <div class="reviews_wrapper">
                                <h2>@comments.Count review for @Model.Title</h2>
                                <p>Average Rating:</p>
                                <ul class="rating-stars">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <li>
                                            <a href="#" class="@(i <= Math.Floor((double)ViewBag.AverageRating) ? "selected" : "")">
                                                <i class="icon-star"></i>
                                            </a>
                                        </li>
                                    }
                                </ul>
                                @foreach (var item in comments)
                                {
                                    <div class="reviews_comment_box">
                                        <div class="comment_thmb">
                                            <img src="assets/img/blog/comment2.jpg" alt="">
                                        </div>
                                        <div class="comment_text">
                                            <div class="reviews_meta">
                                                <ul class="rating-stars">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        <li><a href="#" class="@(i <= item.Rating ? "selected" : "")"><i class="icon-star"></i></a></li>
                                                    }
                                                </ul>
                                                <p><strong>@item.Name </strong>- @item.CreateDate.ToString("dd/MM/yyyy")</p>
                                                <span>@item.CommentText</span>
                                            </div>
                                        </div>

                                    </div>
                                }
                                <div class="comment_title">
                                    <h2>Add a review </h2>
                                    <p>Your email address will not be published. Required fields are marked </p>
                                </div>
                                <div class="product_review_form">
                                    <form method="post" asp-action="SubmitComment" asp-controller="Products">
                                        <input type="hidden" name="productId" value="@Model.Id" />
                                        <div class="row">
                                            <div class="col-12">
                                                <label for="review_comment">Your review </label>
                                                <textarea name="commentText" id="review_comment"></textarea>
                                            </div>
                                            <div class="col-lg-6 col-md-6">
                                                <label for="author">Name</label>
                                                <input name="name" id="author" type="text">

                                            </div>
                                            <div class="col-lg-6 col-md-6">
                                                <label for="email">Email </label>
                                                <input name="email" id="email" type="text">
                                            </div>
                                            <div class="col-12">
                                                <label for="rating">Rating</label>
                                                <ul class="rating-stars">
                                                    <li><a href="#" data-value="1"><i class="icon-star"></i></a></li>
                                                    <li><a href="#" data-value="2"><i class="icon-star"></i></a></li>
                                                    <li><a href="#" data-value="3"><i class="icon-star"></i></a></li>
                                                    <li><a href="#" data-value="4"><i class="icon-star"></i></a></li>
                                                    <li><a href="#" data-value="5"><i class="icon-star"></i></a></li>
                                                </ul>
                                                <input type="hidden" name="rating" id="ratingValue" value="0">
                                            </div>
                                        </div>
                                        @if (TempData["SuccessMessage"] != null)
                                        {
                                            <div class="alert alert-success" role="alert">
                                                @TempData["SuccessMessage"]
                                            </div>
                                        }
                                        @if (TempData["ErrorMessage"] != null)
                                        {
                                            <div class="alert alert-danger" role="alert">
                                                @TempData["ErrorMessage"]
                                            </div>
                                        }
                                        <button type="submit">Submit</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="tags" role="tabpanel">
                            <div class="product_info_content">
                                <ul>

                                    @if (!string.IsNullOrEmpty(Model.Tags))
                                    {
                                        var tags = Model.Tags.Split(",");
                                        @foreach (var item in tags)
                                        {
                                            <li>@item</li>
                                        }
                                    }
                                </ul>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="video" role="tabpanel">
                            <div class="product_tab_vidio text-center">
                                <iframe width="729" height="410" src="@Model.VideoUrl"
                                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                        allowfullscreen></iframe>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--product info end-->

<!--product area start-->
@if (newProducts.Any())
{
    <section class="product_area related_products mb-118">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section_title mb-50">
                        <h2>New Products</h2>
                    </div>
                </div>
            </div>
            <div class="product_container row">
                <div class=" product_slick slick_slider_activation" data-slick='{
                    "slidesToShow": 4,
                    "slidesToScroll": 1,
                    "arrows": true,
                    "dots": false,
                    "autoplay": false,
                    "speed": 300,
                    "infinite": true,
                    "responsive":[
                      {"breakpoint":992, "settings": { "slidesToShow": 3 } },
                      {"breakpoint":768, "settings": { "slidesToShow": 2 } },
                      {"breakpoint":300, "settings": { "slidesToShow": 1 } }
                     ]
                }'>
                    @foreach (var item in newProducts)
                    {
                        <div class="col-lg-3">
                            <article class="single_product">
                                <figure>
                                    <div class="product_thumb">
                                        <a href="/products/productdetails/@item.Id">
                                            <img class="primary_img" src="/images/banners/@item.ImageName"
                                                 alt="@item.ImageName">
                                        </a>
                                        @if (item.Discount != null && item.Price > 0)
                                        {
                                            <div class="product_label">
                                                @{
                                                    decimal? discountPercentage;
                                                    discountPercentage = (item.Discount.GetValueOrDefault(0) / item.Price.GetValueOrDefault(0)) * 100;
                                                }
                                                <span>
                                                -@discountPercentage.GetValueOrDefault(0).ToString("F0")%
                                            </span>
                                            </div>
                                        }
                                    </div>
                                    <figcaption class="product_content text-center">
                                        <h4 class="product_name"><a href="/products/productdetails/@item.Id">@item.Title</a>
                                        </h4>
                                        <div class="price_box">
                                            @if (item.Discount != null)
                                            {
                                                <span class="current_price">
                                                @{
                                                        decimal? discountedPrice;
                                                        discountedPrice = item.Price.GetValueOrDefault(0) - item.Discount.GetValueOrDefault(0);
                                                    }
                                                    @CurrencyConverter.FormatToVND(discountedPrice.GetValueOrDefault(0))
                                            </span>
                                                <span class="old_price">@CurrencyConverter.FormatToVND(item.Price.GetValueOrDefault(0))</span>
                                            }
                                            else
                                            {
                                                <span
                                                    class="current-price">@CurrencyConverter.FormatToVND(item.Price.GetValueOrDefault(0))</span>
                                            }
                                        </div>
                                        <div class="add_to_cart">
                                            <a class="btn btn-primary" href="#" data-tippy="Add To Cart"
                                               data-tippy-inertia="true" data-tippy-delay="50" data-tippy-arrow="true"
                                               data-tippy-placement="top">Add To Cart</a>
                                        </div>
                                    </figcaption>
                                </figure>
                            </article>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
}

<!--product area end-->

<script>
    const stars = document.querySelectorAll('.rating-stars a');
    const ratingInput = document.getElementById('ratingValue');

    stars.forEach(star => {
        star.addEventListener('click', function(e) {
            e.preventDefault();
            const value = this.getAttribute('data-value');
            ratingInput.value = value;

            stars.forEach(star => star.classList.remove('selected'));
            this.classList.add('selected');
            for (let i = 0; i < value; i++) {
                stars[i].classList.add('selected');
            }
        });
    });
</script>


